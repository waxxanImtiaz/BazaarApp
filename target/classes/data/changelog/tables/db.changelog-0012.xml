<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="#13" author="imtiaz">
        <createTable tableName="city">
            <column name="id" autoIncrement="true" type="int">
                <constraints primaryKey="true"  nullable="false"/>
            </column>
            <column name="city_name" type="varchar(500)">
                <constraints nullable="false"/>
            </column>

            <column name="lat" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="lng" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="state_id" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="active" type="boolean" defaultValueBoolean="true"/>

        </createTable>
        <addForeignKeyConstraint baseColumnNames="id"
                                 baseTableName="state"
                                 constraintName="state_id"
                                 referencedColumnNames="id"
                                 referencedTableName="city"/>
        <rollback>
            <dropTable tableName="city"/>
        </rollback>
    </changeSet>

</databaseChangeLog>